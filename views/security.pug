extends base

block css 
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Security
    link(href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' rel='stylesheet' type='text/css')

    link(rel='stylesheet' href='/css/header.css')
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/css/media_header.css')
    link(rel='stylesheet' href='/css/footer_media.css')
    link(rel='stylesheet' href='/css/footer.css')
    link(rel='stylesheet' href='/css/signin.css')
    link(rel='stylesheet' href='/css/security_media.css')
    link(rel='shortcut icon' href='/img/favicon.png' type='image/x-icon')
    script(src='https://js.stripe.com/v3/')


block content 
    .loader
        img(src='/img/loader1.png' alt='loader' height='80rem')
    .error
        .success
            .error-left
                img(src='/img/error.png' alt='error' height='60rem')
            .error-right
                h4 There was a Problem
                p Wrong password
    .error-2
        .success1
            .error1-left
                i.ion-ios-checkmark-outline
            .error1-right
                h4 Success
                p You successfully changed your account!

    h1 Login &amp; Security
    .allContent
        .content
            form.submitChanges(action='#'  )
                h1 Change Details
                p#name-name Name
                input#name(type='text' name='name' value= user.name)
                p#p-email Email
                input#email(type='email' name='email' placeholder='user@gmail.com' required='' value= user.email)
                p#p-email Address
                input#address(type='text' name='address' required='' value= user.address)
                p#p-email PinCode
                input#PinCode(type='number' name='PinCode' required='' maxlength='6' minlength='6' value= user.pincode)
                br
                input#submit(type='submit' value='Save Changes' )
        .content
            form.change-Password(action='#')
                h1 Change Password
                p#p-pass Current-Password
                input#current-password(type='password' name='current-password' minlength='8' required='')
                p#p-pass New Password
                input#password(type='password' name='password' minlength='8' required='')
                p#p-pass Confirm Password
                input#confirm-password(type='password' name='confirm-password' minlength='8' required='')
                br
                input#submit(type='submit' value='Save Changes')

block end 
    script(src="/js/bundle7.js") 